<Window x:Class="WPFDZ_1.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MainWindow" Height="182" Width="430">
    <Grid Margin="0,0,28,0">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="2*"/>
            <ColumnDefinition Width="1*"/>
        </Grid.ColumnDefinitions>
        <WrapPanel Grid.Column="0">
            <Button Content="Navy" Foreground="Navy" Margin="2"/>
            <Button Content="Blue" Foreground="Blue" Margin="2"/>
            <Button Content="Aqua" Foreground="Aqua" Margin="2"/>
            <Button Content="Teal" Foreground="Teal" Margin="2"/>
            <Button Content="Olive" Foreground="Olive" Margin="2"/>
            <Button Content="Green" Foreground="Green" Margin="2"/>
            <Button Content="Lime" Foreground="Lime" Margin="2"/>
            <Button Content="Yellow" Foreground="Yellow" Margin="2"/>
            <Button Content="Orange" Foreground="Orange" Margin="2"/>
            <Button Content="Red" Foreground="Red" Margin="2"/>
            <Button Content="Maroon" Foreground="Maroon" Margin="2"/>
            <Button Content="Fuchsia" Foreground="Fuchsia" Margin="2"/>
            <Button Content="Purple" Foreground="Purple" Margin="2"/>
            <Button Content="Black" Foreground="Black" Margin="2"/>
            <Button Content="Silver" Foreground="Silver" Margin="2"/>
            <Button Content="Gray" Foreground="Gray" Margin="2"/>
            <Button Content="White" Foreground="White" Margin="2"/>
        </WrapPanel>
    </Grid>
</Window>
